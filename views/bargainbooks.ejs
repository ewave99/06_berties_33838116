<!DOCTYPE html>
<html>
    <head>
        <title>List of bargain books for <%=shopData.shopName%>!</title>
        <link rel="stylesheet"  type="text/css" href="/main.css" />
    </head>
    <body>
        <h1>List of bargain books for <%=shopData.shopName%>!</h1>
        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
            </tr>
            <% for (let {id, name, price} of availableBooks) { %>
            <tr>
                <td><%= id %> </td>
                <td><%= name %></td>
                <td><%= price %> GBP</td>
            </tr>
            <% } %>
        </table>
    </body>
</html>