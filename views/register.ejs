<!doctype html>
<html>
  <head>
    <title>Register for <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Register for <%=shopData.shopName%></h1>
    <% if (hasError) { %>
      <p>Sorry, there was an error with your registration details.</p>
      <% errors.forEach(e => { %>
        <% if (e.path === "username") { %>
          <p>Error: username must be between 5 and 20 characters.</p>
        <% } else if (e.path === "password") { %>
          <p>Error: password must be longer than 8 characters.</p>
        <% } else if (e.path === "email") { %>
          <p>Error: a valid email address must be entered.</p>
        <% } %> 
      <% }) %>
    <% } %>
    <form method="POST" action="registered">
        <p>Username: <input id="username" type="text" name="username" /></p>
        <p>First name: <input id="first" type="text" name="first" /></p>
        <p>Last name: <input id="last" type="text" name="last" /></p>
        <p>Email: <input id="email" type="email" name="email" /></p>
        <p>Password: <input id="password" type="password" name="password" /></p>
        <input type="submit" value="Register" />
      </form>
  </body>
</html>